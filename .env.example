# ── Application ──────────────────────────────────────────────────────────────
APP_PORT=80

# ── PostgreSQL ────────────────────────────────────────────────────────────────
POSTGRES_DB=oeeforge
POSTGRES_USER=oeeforge
POSTGRES_PASSWORD=oeeforge_secret
POSTGRES_PORT=5432

# ── InfluxDB 3 Core ───────────────────────────────────────────────────────────
INFLUXDB_DATABASE=oeeforge
INFLUXDB_PORT=8181
# Admin token: must start with "apiv3_". Generate with:
#   echo "apiv3_$(openssl rand -hex 32)"
INFLUXDB3_ADMIN_TOKEN=apiv3_changeme_replace_with_output_of_openssl_command

# ── InfluxDB 3 Explorer ───────────────────────────────────────────────────────
EXPLORER_PORT=8888

# ── FastAPI / Auth ────────────────────────────────────────────────────────────
# Generate with: openssl rand -hex 32
SECRET_KEY=changeme_in_production_use_openssl_rand_hex_32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=480

# First admin user created on startup
FIRST_ADMIN_EMAIL=admin@oeeforge.local
FIRST_ADMIN_PASSWORD=admin

# ── OEE Calculation Service ───────────────────────────────────────────────────
# Calculation interval in seconds (default: 5 minutes)
OEE_CALC_INTERVAL_SECONDS=300

# ── Grafana ───────────────────────────────────────────────────────────────────
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin
GRAFANA_PORT=3001
